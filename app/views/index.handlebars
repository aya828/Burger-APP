
<div class="container">
  <div class="title">
    <p id="title">Eat Da Burger!</p>
  </div>

  <div>
    <div class="row">
      <div class="col 8">
        <ul class="notDevoured">
          {{#each burgers.uneaten}}
          <li class="burger">
            {{this.name}}
            <button name={{this.id}} class="btn btn-info devourBtn" data-trigger="save">DEVOUR</button>
          </li>
          {{/each}}
        </ul>
      </div>
      <div class="col 1"></div>
      <div class="col 3">
        <ul class="devoured">
          {{#each burgers.eaten}}
          <li class="burger">
            {{this.name}}
          </li>
          {{/each}}
        </ul>
      </div>

    </div> 
  </div>

  <div class="row">
    <div class="col 4"></div>
    <div class="col 4">
      <div class="input-group mb-3">
        <input type="text" id="newBurger" class="form-control" placeholder="Enter burger here!" aria-label="Recipient's username" aria-describedby="button-addon2">
        <div class="input-group-append">
          <button class="btn btn-outline-secondary" type="button" id="submitBtn">SUBMIT</button>
        </div>
      </div>
    </div>
    <div class="col 4"></div>
  </div>
  
</div>
