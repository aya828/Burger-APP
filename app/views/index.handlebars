<div>
  <ul class="notDevoured">
    {{#each burgers.uneaten}}
    <li class="burger">
      {{this.name}}
      <button name={{this.id}} class="btn btn-outline-secondary devourBtn" data-trigger="save">Devour</button>
    </li>
    {{/each}}
  </ul>
</div>

<div>
  <ul class="devoured">
    {{#each burgers.eaten}}
    <li class="burger">
      {{this.name}}
    </li>
    {{/each}}
  </ul>
</div>

<div class="input-group mb-3">
  <input type="text" id="newBurger" class="form-control" placeholder="Recipient's username" aria-label="Recipient's username" aria-describedby="button-addon2">
  <div class="input-group-append">
    <button class="btn btn-outline-secondary" type="button" id="submitBtn">Submit</button>
  </div>
</div>
